# Hugging Face
HUGGING_FACE_HUB_TOKEN=your_huggingface_token_here

# OpenAI API (optional, only if using GPT models)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_URL=https://api.openai.com/v1

# Weights & Biases
WANDB_API_KEY=your_wandb_api_key_here
WANDB_SEM_UNC_ENTITY=your_wandb_entity_here

# Cache directory for models and datasets
XDG_CACHE_HOME=/workspace/cache

# Scratch directory for data
SCRATCH_DIR=/workspace/scratch

# Logs directory for experiment logs
LOGS_DIR=/workspace/logs

# User identifier (used for scratch directory paths)
USER=root

